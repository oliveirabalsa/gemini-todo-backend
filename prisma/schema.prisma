// Define the Prisma client generator
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EnumTaskPriority {
  HIGH   @map("HIGH")
  MEDIUM @map("MEDIUM")
  LOW    @map("LOW")
}

enum EnumTaskStatus {
  TODO        @map("TODO")
  IN_PROGRESS @map("IN_PROGRESS")
  COMPLETED   @map("COMPLETED")
}

model Task {
  id          String            @id @default(uuid())
  title       String
  description String?
  priority    EnumTaskPriority? @default(LOW)
  status      EnumTaskStatus?   @default(TODO)
  dueDate     DateTime?
}
